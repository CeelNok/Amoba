<Window x:Class="Amoba.wndMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Amoba"
        mc:Ignorable="d"
        Title="wndMenu" Height="450" Width="300">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.Resources>
            <Style TargetType="{x:Type Button}">
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="VerticalAlignment" Value="Stretch"/>
                <Setter Property="Margin" Value="10"/>
            </Style>
        </Grid.Resources>

        <Button  x:Name="btUjjatek" Grid.Row="1" FontSize="25" Content="Új Játék" Click="click_UjJatek"/>
        <Button x:Name="btEredmenyek" Grid.Row="2" FontSize="25" Content="Eredmények" Click="click_Eredmenyek"/>
        <Button x:Name="btKilep" Grid.Row="3" FontSize="25" Content="Kilép" Click="click_Kilep"/>
        <Image Source="logo.png"></Image>
    </Grid>
</Window>
